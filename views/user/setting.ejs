
<% include ../partials/header %>

<div class="container">
<h1 style="text-align:center">Setting</h1>

<form style="margin-bottom:20px;width:30%;margin:30px auto" action="/setting" method="POST">
                     
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text"  class="form-control" name="user[first_name]" value="<%= currentUser.first_name %>"></input>
                </div>
                
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text"  class="form-control" name="user[last_name]" value="<%= currentUser.last_name %>"></input>
                </div>
                
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="user[email]" value="<%= currentUser.email%>"></input>
                </div>
                
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" name="user[address]" value="<%= currentUser.address%>"></input>
                </div>
                
                <div class="form-group">
                    <label>Profile Picture</label>
                    <input type="text" class="form-control" name="user[profile_img_url]" value="<%= currentUser.profile_img_url%>"></input>
                </div>
                
                <div class="form-group">
                    <label>Signature</label>
                    <input type="text" class="form-control" name="user[signature]" value="<%= currentUser.signature%>"></input>
                </div>
                
                <button type="submit" id="submit" class="btn btn-primary btn-block">Update</button>
</div>
</form>

<% include ../partials/footer %>